{{!-- template-lint-disable no-implicit-this  --}}
{{page-title (t 'pages.user-account.title')}}
<BurgerMenu @animation="push" @translucentOverlay={{true}} as |burger|>
  <burger.outlet>

    <NavbarHeader @burger={{burger}} @campaignParticipations={{@model.campaignParticipations}}/>

    <main id="main">
      <div class="background-banner">
        <div class="user-account__banner">
          <h1 class="user-account-banner__title">{{t 'pages.user-account.title'}}</h1>
        </div>
      </div>

      <nav>
        <LinkTo @route="user-account.personal-information">
          Informations personnelles
        </LinkTo>
        <LinkTo @route="user-account.connection-methods">
          MÃ©thodes de connexion
        </LinkTo>
      </nav>

      {{#if this.isEmailEditionMode}}
      <div class="user-account__update-email">
        <UserAccountUpdateEmail
                @disableEmailEditionMode={{this.disableEmailEditionMode}}
                @saveNewEmail={{this.saveNewEmail}}/>
      </div>
      {{else}}
      <div class="user-account__panel">
        <UserAccountPanel
                @user={{@model}}
                @enableEmailEditionMode={{this.enableEmailEditionMode}}/>
      </div>
      {{/if}}
    </main>

    <Footer />
  </burger.outlet>
</BurgerMenu>
