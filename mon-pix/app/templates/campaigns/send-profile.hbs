{{title pageTitle}}
<div class="background-banner-wrapper">
  <div class="background-banner"></div>
  <div class="rounded-panel rounded-panel--strong rounded-panel--over-background-banner send-profile-header">

    <div class="send-profile-header__announcement">
      <h1 class="send-profile-header__title">Envoi de votre profil Pix</h1>
      <p class="send-profile-header__instruction">
        Vous allez transmettre votre score Pix et vos niveaux de compétence en l'état actuel.<br>
        N'hésitez pas à vérifier votre profil avant de l'envoyer.
      </p>
    </div>

    <ProfileSharingForm
            @sendProfile={{action "sendProfile"}}
            @campaignParticipation={{this.model.campaignParticipation}}
            @campaign={{this.model.campaign}}
            @isLoading={{this.isLoading}}
            @errorMessage={{this.errorMessage}}
    />

    <div class="send-profile-header__profile">
      <HexagonScore @pixScore={{this.model.user.pixScore.value}} />
      <div class="send-profile-header__profile__cards">
        <ProfileScorecards class="send-profile-header__profile__cards" @areasCode={{this.model.user.areasCode}} @scorecards={{this.model.user.scorecards}}/>
      </div>
    </div>

    <ProfileSharingForm
            @sendProfile={{action "sendProfile"}}
            @campaignParticipation={{this.model.campaignParticipation}}
            @campaign={{this.model.campaign}}
            @isLoading={{this.isLoading}}
            @errorMessage={{this.errorMessage}}
    />
  </div>
</div>
