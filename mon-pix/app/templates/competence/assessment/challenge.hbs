<div class="assessment-challenge">

  <div class="assessment-challenge__course-banner">
    {{campaign-banner title=model.assessment.title returnTo="profile"}}
  </div>

  <div class="assessment-challenge__content">
    {{#if model.assessment.showProgressBar}}
      <div class="assessment-challenge__progress-bar">
        {{progress-bar assessment=model.assessment}}
      </div>
    {{/if}}

    {{component (get-challenge-component-class model.challenge)
                challenge=model.challenge
                assessment=model.assessment
                answer=model.answer
                answerValidated=(route-action "saveAnswerAndNavigate")}}
  </div>
</div>
