{{#if this.isEmailEditionMode}}
  <div class="user-account__update-email">
    <UserAccountUpdateEmail @saveNewEmail={{this.saveNewEmail}} @disableEmailEditionMode={{this.disableEmailEditionMode}} />
  </div>
{{else if this.isEmailValidationEditionMode}}
  <div class="user-account__update-email-validation">
    <UserAccountUpdateEmailValidation @disableEmailValidationEditionMode={{this.disableEmailValidationEditionMode}} />
  </div>
{{else}}
  <div class="user-account__connection-methods">
    <UserAccountConnexionMethods
            @user={{@model}}
            @enableEmailEditionMode={{this.enableEmailEditionMode}}
            @enableEmailValidationEditionMode={{this.enableEmailValidationEditionMode}}
    />
  </div>
{{/if}}
