<div class="assessment-challenge">

  <!-- Currently, there is checkpoints only during campaign participations -->
  <div class="assessment-challenge__course-banner">
      {{campaign-banner title=model.campaign.title checkpoint='true'}}
  </div>

  <div class="checkpoint__container">

    <div class="checkpoint__header">

      <div class="checkpoint-progress-bar-wrapper">

        <div class="checkpoint-progress-bar">
          <div class="checkpoint-progress-bar__marker" style="width: {{model.smartPlacementProgression.completionPercentage}}"></div>
        </div>

        <div class="checkpoint-progress-bar__tooltip-wrapper" style="width: {{model.smartPlacementProgression.completionPercentage}}">
          <div class="checkpoint-progress-bar__tooltip">
            <p class="sr-only">Vous avez effectué</p>{{model.smartPlacementProgression.completionPercentage}}<p class="sr-only"> de votre parcours.</p>
          </div>
        </div>

        <p class="checkpoint-legend">avancement du parcours</p>

      </div>
      <div class="checkpoint__continue-wrapper">
        {{checkpoint-continue campaignId=model.id nextPageButtonText=nextPageButtonText}}
      </div>
    </div>

    <div class="checkpoint__content">
      <div class="checkpoint-title-container">
        <p class="checkpoint-title">vos réponses</p>
      </div>
      <div class="assessment-results__list">
        {{#each model.answersSinceLastCheckpoints as |answer|}}
          {{result-item-campaign answer=answer openAnswerDetails=(action "openComparisonWindow")}}
        {{/each}}
      </div>
      {{checkpoint-continue campaignId=model.id nextPageButtonText=nextPageButtonText}}
    </div>
  </div>

  {{#if isShowingModal}}
    {{comparison-window answer=answer correction=correction challenge=challenge closeComparisonWindow=(action 'closeComparisonWindow')}}
  {{/if}}

</div>
