{{! template-lint-disable no-implicit-this no-unknown-arguments-for-builtin-components }}
{{page-title (t "pages.terms-of-service-pole-emploi.title")}}
<div class="terms-of-service-page">
  <div class="terms-of-service-form">

    <div class="terms-of-service-form__logo">
      <a href={{homeUrl}}>
        <img class="pix-logo__image" src="{{rootURL}}/images/pix-logo.svg" alt={{t "navigation.homepage"}} />
      </a>
    </div>

    <h2 class="terms-of-service-form__title">{{t "pages.terms-of-service-pole-emploi.title"}}</h2>

    <div class="terms-of-service-form__description">
      {{t "pages.terms-of-service-pole-emploi.message"}}
    </div>

    <div class="terms-of-service-form__conditions">
      <label for="pix-cgu">
        <Input
          @type="checkbox"
          @id="pix-cgu"
          class="terms-of-service-form-conditions__check"
          @checked={{this.isTermsOfServiceValidated}}
        />
        {{t "pages.terms-of-service-pole-emploi.cgu" htmlSafe=true}}

      </label>
      {{#if this.showErrorTermsOfServiceNotSelected}}
        <div class="terms-of-service-form-conditions__validation-error">
          {{t "pages.terms-of-service-pole-emploi.form.error-message"}}
        </div>
      {{/if}}
    </div>

    <div class="terms-of-service-form__actions">
      <LinkTo @route="logout" class="button button--white">{{t "common.actions.back"}}</LinkTo>
      {{#if this.showErrorTermsOfServiceExpiredAuthenticatedKey}}
        <div class="terms-of-service-form-conditions__validation-error">{{t
            "pages.terms-of-service-pole-emploi.form.expired-authentication-key"
          }}</div>
      {{else}}
        <PixButton @type="submit" @triggerAction={{this.submit}} class="terms-of-service-form-actions__submit">
          {{t "pages.terms-of-service-pole-emploi.form.button"}}
        </PixButton>
      {{/if}}
    </div>

  </div>
</div>