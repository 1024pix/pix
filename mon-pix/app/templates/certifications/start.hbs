{{#burger-menu animation="push" translucentOverlay=true as |burger|}}
  {{#burger.outlet}}

    {{navbar-header class="navbar-header--white" burger=burger}}
    <div class="background-banner-wrapper">
      <div class="background-banner"></div>

        {{#if model.isCertifiable}}
          <div class="rounded-panel rounded-panel--strong rounded-panel--over-background-banner certification-start-page__panel">
            {{#if this.showCongratulationsBanner }}
              <CongratulationsCertificationBanner @fullName={{this.currentUser.user.fullName}} @closeBanner={{action "closeBanner"}}/>
            {{/if}}
            <div class="certification-stepper">
              <Stepper @steps={{array "certification-stepper-start"}}/>
            </div>
          </div>
        {{else}}
          {{certification-not-certifiable}}
        {{/if}}
    </div>

  {{/burger.outlet}}
{{/burger-menu}}
