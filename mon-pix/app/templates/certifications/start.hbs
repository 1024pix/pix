{{!-- template-lint-disable no-implicit-this  --}}
{{page-title (t 'pages.certification-start.title')}}
<BurgerMenu @animation="push" @translucentOverlay={{true}} as |burger|>
  <burger.outlet>

    <NavbarHeader @burger={{burger}} />
    <PixBackgroundHeader id="main">

      {{#if model.isCertifiable}}
        <PixBlock @shadow="heavy" class="certification-start-page__block">
          {{#if this.showCongratulationsBanner }}
            <CongratulationsCertificationBanner @certificationEligibility={{this.model}} @fullName={{this.currentUser.user.fullName}} @closeBanner={{this.closeBanner}}/>
          {{/if}}
          <Stepper @steps={{array "certification-stepper-join" "certification-stepper-start"}} @onStepChange={{this.closeBanner}}/>
        </PixBlock>
      {{else}}
        <CertificationNotCertifiable />
      {{/if}}

    </PixBackgroundHeader>

    <Footer />

  </burger.outlet>
</BurgerMenu>
