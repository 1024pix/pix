<div class="campaign-banner{{if checkpoint '__checkpoint'}}">
  <div class="campaign-banner-container">
    <div class="campaign-banner__pix-logo">
      <img src="/images/pix-logo-blanc.svg" alt="Pix">
    </div>
    {{#if title}}
      <div class="campaign-banner__splitter"></div>
      <div class="campaign-banner__title"><h1>{{title}}</h1></div>
    {{/if}}
    <div class="campaign-banner__home-link">
      {{#if returnToProfileV2}}
        {{#link-to "profilv2" class="campaign-banner__home-link"}}‹ Quitter{{/link-to}}
      {{else}}
        {{#link-to "index" class="campaign-banner__home-link"}}‹ Quitter{{/link-to}}
      {{/if}}
    </div>
  </div>
</div>
