<footer class="footer">
  <div class="footer__container">
    <div class="footer-container__left">
      <div class="footer__logos">
        <div class="footer-logos__pix">
          <LinkTo @route="index" class="pix-logo__link" @title={{t 'navigation.homepage'}}>
            <img class="footer-logos-pix__image" src="{{rootURL}}/images/pix-logo.svg" alt={{t 'common.pix'}}>
          </LinkTo>
        </div>

        {{#if this.shouldShowTheMarianneLogo}}
          <div class="footer-logos__french-government">
            <img src="{{rootURL}}/images/logo-de-la-republique-francaise.svg"
                 alt="{{t 'common.french-republic'}}">
          </div>
        {{/if}}
      </div>

      <div class="footer__social-medias">
        <a href="https://www.facebook.com/pg/Pix1024/"
           class="footer-social-medias__link"
           target="_blank"
           rel="noopener noreferrer">
          <FaIcon @prefix="fab" @icon="facebook-f" class="footer-social-medias-link__icon"/>
        </a>

        <a href="https://www.linkedin.com/company/gip-pix"
           class="footer-social-medias__link"
           target="_blank"
           rel="noopener noreferrer">
          <FaIcon @prefix="fab"
                  @icon="linkedin-in"
                  class="footer-social-medias-link__icon"
          />
        </a>

        <a href="https://twitter.com/Pix_officiel"
           class="footer-social-medias__link"
           target="_blank"
           rel="noopener noreferrer">
          <FaIcon @prefix="fab"
                  @icon="twitter"
                  class="footer-social-medias-link__icon"/>
        </a>
      </div>

      <div class="footer__navigation">
        <a href="{{t 'navigation.footer.link-help-center'}}"
           target="_blank"
           class="footer-navigation__item">
          {{t 'navigation.footer.help-center'}}
        </a>

        <a href="{{t 'navigation.footer.link-a11y'}}"
           target="_blank"
           class="footer-navigation__item">
          {{t 'navigation.footer.a11y'}}
        </a>
      </div>
    </div>

    <div class="footer__copyrights">
      <span>Â© 2020 Pix</span>
    </div>

  </div>

</footer>
