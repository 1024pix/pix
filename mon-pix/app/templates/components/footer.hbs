<footer class="footer">
  <div class="footer__container">
    <div class="footer-container__logos">
      <PixLogo/>

      {{#if this.shouldShowTheMarianneLogo}}
        <div class="footer-logos__french-government">
          <img src="{{rootURL}}/images/logo-de-la-republique-francaise.svg"
               alt="{{t 'common.french-republic'}}">
        </div>
      {{/if}}
    </div>

    <div class="footer-container__content">
      <div class="footer-container__links">
        <div class="footer-links__social-medias">
          <a href="{{t 'navigation.footer.social-medias.link.facebook'}}"
             class="footer-social-medias__item"
             target="_blank"
             rel="noopener noreferrer"
             aria-label="{{t 'navigation.footer.social-medias.aria-label.facebook'}}">
            <FaIcon @prefix="fab"
                    @icon="facebook-f"
                    class="footer-social-medias-item__icon"/>
          </a>

          <a href="{{t 'navigation.footer.social-medias.link.linkedin'}}"
             class="footer-social-medias__item"
             target="_blank"
             rel="noopener noreferrer"
             aria-label="{{t 'navigation.footer.social-medias.aria-label.linkedin'}}">
            <FaIcon @prefix="fab"
                    @icon="linkedin-in"
                    class="footer-social-medias-item__icon"
            />
          </a>

          <a href="{{t 'navigation.footer.social-medias.link.twitter'}}"
             class="footer-social-medias__item"
             target="_blank"
             rel="noopener noreferrer"
             aria-label="{{t 'navigation.footer.social-medias.aria-label.twitter'}}">
            <FaIcon @prefix="fab"
                    @icon="twitter"
                    class="footer-social-medias-item__icon"/>
          </a>
        </div>

        <div class="footer-links__navigation">
          <a href="{{t 'navigation.footer.link-help-center'}}"
             target="_blank"
             class="footer-navigation__item">
            {{t 'navigation.footer.help-center'}}
          </a>

          <a href="{{t 'navigation.footer.link-a11y'}}"
             target="_blank"
             class="footer-navigation__item">
            {{t 'navigation.footer.a11y'}}
          </a>
        </div>
      </div>

      <div class="footer-container__copyrights">
        <span>Â© {{ this.currentYear }} Pix</span>
      </div>
    </div>

  </div>

</footer>
