<main class="rounded-panel campaign-landing-page__container__start">
  <div class="campaign-landing-page__start__image__container">
    <div class="campaign-landing-page__pix-logo">
      <img class="campaign-landing-page__image" src="{{rootURL}}/images/pix-logo.svg" alt="Pix">
    </div>
    {{#if @campaign.organizationLogoUrl}}
      <div class="campaign-landing-page__logo">
        <img class="campaign-landing-page__image" src="{{@campaign.organizationLogoUrl}}" alt="{{@campaign.organizationName}}">
      </div>
    {{/if}}
  </div>
  <div class="campaign-landing-page__start__text">
    <h1 class="campaign-landing-page__start__text__title">
      {{@titleText}}
    </h1>
    <h2 class="campaign-landing-page__start__text__announcement">
      {{{@announcementText}}}
    </h2>

    <form>
        <PixButton
           @type="submit"
           class="campaign-landing-page__start-button button button--big"
           @action={{action @startCampaignParticipation on="submit"}}
           @loading-color='white'>
          {{@buttonText}}
        </PixButton>
    </form>

    <p class="campaign-landing-page__start__text__legal">
      {{@legalText}}
    </p>
  </div>

  {{#if @campaign.customLandingPageText}}
    <hr class="campaign-landing-page__dash-line">

    <div class="campaign-landing-page__start__custom-text">
      <MarkdownToHtml @markdown={{@campaign.customLandingPageText}} />
    </div>
  {{/if}}
</main>
