{{#if currentUser.user}}
  <div class="logged-user-name" aria-haspopup="true"
       aria-expanded="{{_canDisplayMenu}}">
    <a href="#" class="logged-user-name__link" {{action 'toggleUserMenu'}}>
      {{currentUser.user.fullName}}
      <span class="caret"></span>
    </a>
  </div>

  {{#if _canDisplayMenu}}
      {{#click-outside action=(action 'closeMenu')}}
        <div class="logged-user-menu">
          <ul class="logged-user-menu__list">
            <li class="logged-user-menu__item user-menu-item">
              <div class="user-menu-item__details-firstname"> {{currentUser.user.firstName}}</div>
              <div class="user-menu-item__details-email">{{currentUser.user.email}}</div>

              {{#if canDisplayLinkToProfile}}
                <div class="user-menu-item__details-account-link">
                  {{#link-to 'index'}}Mon compte{{/link-to}}
                </div>
              {{/if}}

            </li>

            <li class="logged-user-menu__item">
              <div class="user-menu-item__link user-menu-item__link--first user-menu-item" >
                {{#link-to 'user-certifications'}}MES CERTIFICATIONS{{/link-to}}
              </div>
            </li>
            <li class="logged-user-menu__item">
              <div class="user-menu-item__link user-menu-item" >
                <a href="https://pix.fr/aide" title="Aide pour Pix" target="_blank">AIDE</a>
              </div>
            </li>
            <li class="logged-user-menu__item user-menu-item__logout">
              {{#link-to 'logout' class="button button--uppercase button--thin button--grey" tagName='button'}}
                se d√©connecter
              {{/link-to}}
            </li>
          </ul>
        </div>
      {{/click-outside}}
  {{/if}}
{{/if}}
