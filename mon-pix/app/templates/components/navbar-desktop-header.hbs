<div class="navbar-desktop-header">
  <div class="navbar-desktop-header__container">
    <!-- Logo (left) -->
    <div class="navbar-desktop-header-logo">
      <div class="navbar-desktop-header-logo__pix">
        <PixLogo />
      </div>
      {{#if @shouldShowTheMarianneLogo}}
        <div class="navbar-desktop-header-logo__marianne">
          <img src="{{rootURL}}/images/logo-de-la-republique-francaise.svg" alt="{{t 'common.french-republic'}}">
        </div>
      {{/if}}
    </div>

    {{#unless isInRouteWithoutLinksInHeader}}
      {{#if this.isUserLogged}}
        <div class="navbar-desktop-header-container__menu">
          <LinkTo @route="profile" class="navbar-desktop-header-menu__item">
             {{t 'navigation.main.profile'}}
          </LinkTo>
          <LinkTo @route="certifications" class="navbar-desktop-header-menu__item">
            {{t 'navigation.main.start-certification'}}
          </LinkTo>
          <a href="{{t 'navigation.main.link-help'}}" target="_blank" class="navbar-desktop-header-menu__item">
            {{t 'navigation.main.help'}}
          </a>
        </div>
      {{/if}}
    {{/unless}}

    {{#if isUserLogged}}
      <LinkTo @route="fill-in-campaign-code" class="button button--extra-thin button--link">
        {{t 'navigation.main.code'}}
      </LinkTo>
    {{/if}}

    <!-- Links (right) -->
    <div class="navbar-desktop-header-right">
      <NavbarDesktopMenu @menu={{this.menu}} />

      {{#if this.isUserLogged}}
        <UserLoggedMenu />
      {{/if}}
    </div>
  </div>
</div>
