<div class="navbar-header__container">
  {{#unless media.isDesktop}}
    {{navbar-mobile-menu menu=menu}}
  {{/unless}}

  <!-- Logo (left) -->
  <div class="navbar-header-logo">
    {{pix-logo}}
    <img class="navbar-header-logo__marianne" src="{{rootURL}}/images/logo-de-la-republique-francaise.svg" alt="Logo de la Marianne"/>
  </div>

  <!-- Links (right) -->
  <div class="navbar-header-right">
    {{#if media.isDesktop}}
      {{navbar-desktop-menu menu=menu}}
    {{/if}}

    {{#if isUserLogged}}
      {{user-logged-menu}}
    {{/if}}
  </div>
</div>
