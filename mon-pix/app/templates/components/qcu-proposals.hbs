{{!-- template-lint-disable builtin-component-arguments --}}
{{#each this.labeledRadios as |labeledRadio index|}}
<p class="proposal-paragraph qcu-proposals">
  <Input type="radio"
         name="radio"
         class="qcu-proposals__radio"
         value="{{inc index}}"
         data-value="{{inc index}}"
         id="radio_{{inc index}}"
         checked={{labeledRadio.[1]}}
         {{on 'click' (fn this.radioClicked index)}}
         disabled={{if @answer true}} />

  <label for="radio_{{inc index}}"
          class="qcu-proposals__label">
    <span class="sr-only">{{t 'pages.proposals.answer.qcu'}}</span>
    <MarkdownToHtml @class="qcu-panel__text proposal-text" @markdown={{labeledRadio.[0]}} />
  </label>
</p>
{{/each}}
