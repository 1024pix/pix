      {{fa-icon resultItem.icon class=(concat 'result-item-campaign__icon--' resultItem.color)}}
    </div>
  </div>

  <div class="result-item-campaign__instruction">
    {{strip-instruction (convert-to-html answer.challenge.instruction) textLength}}
