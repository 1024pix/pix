<article class="rounded-panel rounded-panel--no-margin-bottom challenge-item" data-challenge-id="{{@challenge.id}}">
  <ChallengeStatement @challenge={{@challenge}} @assessment={{@assessment}} />

  {{component
    (get-challenge-component-class @challenge)
    challenge=@challenge
    answer=@answer
    assessment=@assessment
    timeoutChallenge=@timeoutChallenge
    resetAllChallengeInfo=@resetAllChallengeInfo
    resetChallengeInfoOnResume=@resetChallengeInfoOnResume
    answerValidated=@answerValidated
    resumeAssessment=@resumeAssessment
  }}
</article>