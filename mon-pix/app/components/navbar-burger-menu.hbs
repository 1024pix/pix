<PixSidebar
  @showSidebar={{@showSidebar}}
  @onClose={{@onClose}}
  @title={{this.currentUser.user.fullName}}
  id="principal-menu"
>
  <:content>
    <div class="navbar-burger__menu" role="navigation">
      <div class="navbar-burger-menu__content">
        <div class="navbar-burger-menu-content__navigation">
          <ul class="navbar-burger-menu-content-navigation__list">
            <li class="navbar-burger-menu-content-navigation-list__item">
              <LinkTo
                @route="authenticated.user-dashboard"
                class="navbar-burger-menu-content-navigation-list-item__link"
              >
                {{t "navigation.main.dashboard"}}
              </LinkTo>
            </li>
            <li class="navbar-burger-menu-content-navigation-list__item">
              <LinkTo @route="authenticated.profile" class="navbar-burger-menu-content-navigation-list-item__link">
                {{t "navigation.main.skills"}}
              </LinkTo>
            </li>
            <li class="navbar-burger-menu-content-navigation-list__item">
              <LinkTo
                @route="authenticated.certifications"
                class="navbar-burger-menu-content-navigation-list-item__link"
              >
                {{t "navigation.main.start-certification"}}
              </LinkTo>
            </li>
            <li class="navbar-burger-menu-content-navigation-list__item">
              <LinkTo
                @route="authenticated.user-tutorials"
                class="navbar-burger-menu-content-navigation-list-item__link"
              >
                {{t "navigation.main.tutorials"}}
              </LinkTo>
            </li>
          </ul>
        </div>
        <div class="navbar-burger-menu-content-navigation__button">
          <LinkTo @route="fill-in-campaign-code" class="button button--thin">
            {{t "navigation.main.code"}}
          </LinkTo>
        </div>
      </div>
      <div class="navbar-burger-menu__footer">
        <ul class="navbar-burger-menu-footer__list">
          {{#if this.showMyTestsLink}}
            <li class="navbar-burger-menu-footer-list__item">
              <LinkTo @route="authenticated.user-tests" class="navbar-burger-menu-footer-list-item__link">
                {{t "navigation.user.tests"}}
              </LinkTo>
            </li>
          {{/if}}
          <li class="navbar-burger-menu-footer-list__item">
            <LinkTo @route="authenticated.user-account" class="navbar-burger-menu-footer-list-item__link">
              {{t "navigation.user.account"}}
            </LinkTo>
          </li>
          <li class="navbar-burger-menu-footer-list__item">
            <LinkTo @route="authenticated.user-certifications" class="navbar-burger-menu-footer-list-item__link">
              {{t "navigation.user.certifications"}}
            </LinkTo>
          </li>
          <li class="navbar-burger-menu-footer-list__item">
            <a
              href="{{t 'navigation.main.link-help'}}"
              target="_blank"
              class="navbar-burger-menu-footer-list-item__link"
              rel="noopener noreferrer"
            >
              {{t "navigation.main.help"}}
            </a>
          </li>
          <li class="navbar-burger-menu-footer-list__item">
            <LinkTo
              @route="logout"
              class="navbar-burger-menu-footer-list-item__link navbar-burger-menu-footer-list-item__logout"
            >
              <FaIcon @icon="power-off" class="navbar-burger-menu-footer-list-item-logout__icon" />
              {{t "navigation.user.sign-out"}}
            </LinkTo>
          </li>
        </ul>
      </div>
    </div>
  </:content>
</PixSidebar>