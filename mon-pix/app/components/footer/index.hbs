<footer id="footer" class="footer" role="contentinfo">
  <div class="footer__container">
    <div class="footer-container__logos">
      {{#if this.shouldShowTheMarianneLogo}}
        <div class="footer-logos__french-government">
          <img src="/images/logo/logo-de-la-republique-francaise.svg" alt="{{t 'common.french-republic'}}" />
        </div>
      {{/if}}

      <PixLogo />
    </div>
    <div class="footer-container__content">
      <Footer::FooterLinks />
      <LinkTo @route="authenticated.sitemap" class="footer-navigation__item footer-navigation__item--internal-link">
        {{t "navigation.footer.sitemap"}}
      </LinkTo>
      <div class="footer-container-content__copyrights">
        <span>{{t "navigation.copyrights"}} {{this.currentYear}} {{t "navigation.pix"}}</span>
      </div>
    </div>

  </div>

</footer>