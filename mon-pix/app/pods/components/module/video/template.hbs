<div class="element-video">
  <div class="element-video__container">
    <video
      {{did-insert this.launchPlyr}}
      id={{@video.id}}
      ref="video"
      class="pix-video-player"
      alt={{@video.alternativeText}}
      playsinline
      controls
      crossorigin
    >
      <source src={{@video.url}} type="video/mp4" />
      <track kind="captions" label="FranÃ§ais" src={{@video.subtitles}} srclang="fr" default />
    </video>
  </div>
  <PixButton
    @backgroundColor="transparent-light"
    @shape="rounded"
    @size="small"
    @type="button"
    @isBorderVisible={{true}}
    @triggerAction={{this.showModal}}
  >
    {{t "pages.modulix.buttons.element.transcription"}}
  </PixButton>
  <PixModal
    @title={{t "pages.modulix.modals.transcription.title"}}
    @showModal={{this.modalIsOpen}}
    @onCloseButtonClick={{this.closeModal}}
  >
    <:content>
      <p class="video__modal-instruction">
        {{html-unsafe @video.transcription}}
      </p>
    </:content>
  </PixModal>
</div>