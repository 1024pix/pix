<div class="profile-panel__header">

  <div class="profile-header__left-bloc">
    <div class="profile-header__title">
      Votre profil
    </div>

    <div class="profile-header__details">
      5 domaines / 16 compétences
    </div>
  </div>

  {{#if isShowingModal}}
    {{#pix-modale onClose="toggleSharingModal"}}
      <h1>Partage de votre profil</h1>

      <div class="pix-modale__content profile-header__share-modal-content">
        <div>Veuillez saisir le code correspondant à votre organisation (collège, lycée, université, école, entreprise).</div>

        <div class="profile-header__share-modal-form">
          <input value="" placeholder="Ex: ABCD12" class="profile-header__share-modal-input" />

          <div class="profile-header__share-modal-buttons">
            <button class="pix-modal__button profile-header__share-modal-button">Continuer</button>
            <button class="profile-header__share-modal-button" {{action "toggleSharingModal"}}>Annuler</button>
          </div>
        </div>
      </div>
    {{/pix-modale}}
  {{/if}}


  <div class="profile-header__score-pastille-wrapper">
    {{score-pastille pixScore=totalPixScore}}
  </div>

  <div class="profile-header__share">
    <button class="profile-header__share-button" {{action "toggleSharingModal"}}>
      Partager <span class="sr-only">mon profile</span>
      <img class="profile-header__share-button-image" src="/images/icon-partager.svg" alt="">
    </button>
  </div>

</div>

<div class="profile-panel__competence-areas">
  {{competence-area-list competences=competences}}
</div>