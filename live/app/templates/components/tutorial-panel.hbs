{{#if shouldDisplayDefaultMessage}}
  <div class="tutorial-panel__default-message-container">
    <div class="tutorial-panel__default-message-picto-container">
      <img src="{{rootURL}}/images/comparison-window/icon-tuto.svg"
           alt="tuto bientôt disponible"
           class="tutorial-panel__default-message-picto"></div>
    <div class="tutorial-panel__default-message-title">Bientôt ici des tutoriels pour vous aider à réussir ce type
      d'épreuves !!
    </div>
  </div>
{{/if}}

{{#if shouldDisplayHint}}
  <div class="tutorial-panel__hint-container">
    <header class="tutorial-panel__hint-container-header">
      <h3 class="tutorial-panel__hint-title"><span>Pour réussir la prochaine fois</span></h3>
    </header>
    <div class="tutorial-panel__hint-container-body">
      <div class="tutorial-panel__hint-picto-container">
        <img src="{{rootURL}}/images/comparison-window/icon-lampe.svg" alt="" class="tutorial-panel__hint-picto">
      </div>
      <div class="tutorial-panel__hint-content">
        {{hint}}
      </div>
    </div>
  </div>
{{/if}}
