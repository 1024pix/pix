<div class="index-page">

  <div class="index-page__background"></div>

  <section class="index-page__section index-page__section--hero index-page-hero">
    <div class="index-page-hero__navbar-header">
      {{navbar-header}}
    </div>
    <div class="index-page-hero__content">
      <h1 class="index-page-hero__title">Développez vos compétences numériques</h1>
      <p class="index-page-hero__description">PIX est un projet public de plateforme en ligne d’évaluation et de certification des compétences numériques, en cours de développement.</p>

      {{#unless session.isAuthenticated}}
        {{#link-to 'inscription' class="index-page-hero__inscription-link"}}Je m'inscris gratuitement{{/link-to}}
      {{/unless}}
    </div>
  </section>

  <section class="index-page__section index-page__section--partners index-page-patners-enrollment">
    {{partners-enrollment-panel}}
  </section>

  <section class="index-page__section index-page__section--courses index-page-courses">
    <h2 class="index-page-courses__title">Découvrez nos épreuves et aidez‑nous à les améliorer !</h2>
    <div class="index-page-courses__course-list">
      {{course-list courses=model startCourse='startCourse'}}
    </div>
  </section>

  <section class="index-page__section index-page__section--community index-page-community">
    <h2 class="index-page-community__title">Rejoindre la communauté</h2>
    <p class="index-page-community__description">Vous souhaitez devenir béta‑testeur<br>ou être informé(e) du développement de Pix ?</p>
    <div class="index-page-community__form">
      {{follower-form}}
    </div>
  </section>

  <section class="index-page__section index-page__section--features index-page-features">
    <div class="index-page-features__list">
      {{feature-list}}
    </div>
    {{#link-to 'project' class="index-page-features__project-button"}}En savoir plus sur le projet{{/link-to}}
  </section>

</div>

{{app-footer}}
