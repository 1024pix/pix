extends: 'eslint:recommended'
root: true
env:
  es6: true
  node: true
rules:
  indent:
    - 2
    - 2
    - SwitchCase: 1
  linebreak-style:
    - 2
    - unix
  quotes:
    - 2
    - single
  semi:
    - 2
    - always
  prefer-const:
    - 2
  no-var:
    - 2
parserOptions:
  ecmaVersion: 6
  sourceType: script
