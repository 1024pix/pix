extends: 'eslint:recommended'
root: true
env:
  es6: true
  node: true
rules:
  arrow-parens:
    - 2
    - "always"
  computed-property-spacing:
    - 2
    - never
  eol-last:
    - 2
  indent:
    - 2
    - 2
    - SwitchCase: 1
  linebreak-style:
    - 2
    - unix
  max-statements:
    - 1
    - { max: 20 }
  "mocha/no-exclusive-tests":
    - 2
  "mocha/no-identical-title":
    - 2
  "mocha/no-skipped-tests":
    - 1
  no-multiple-empty-lines:
    - 2
    - { max: 1, maxEOF: 1 }
  no-unused-vars:
    - 2
    - { argsIgnorePattern: "_" }
  no-var:
    - 2
  object-curly-spacing:
    - 2
    - always
  prefer-const:
    - 2
  quotes:
    - 2
    - single
  semi:
    - 2
    - always
  space-before-blocks:
    - 2
  space-before-function-paren:
    - 2
    - { anonymous: never, named: never, asyncArrow: ignore }
  space-in-parens:
    - 2
parserOptions:
  ecmaVersion: 8
  sourceType: script
plugins:
  - mocha
