{{page-title "Home"}}
<div>
  <RobotDialog>
    <Bubble @message={{t "pages.missions.start-page.instruction" prenom=@model.organizationLearner.firstName}} />
    <Bubble
      @message={{t "pages.missions.start-page.back-to-students" prenom=@model.organizationLearner.firstName backUrl=this.schoolUrl}}
    />
  </RobotDialog>

  <div class="cards">
    {{#each @model.missions as |mission|}}
      <PixButton @triggerAction={{fn this.goToMission mission.id}} class="card">
        <MissionCard
          @title={{mission.name}}
          @colorClass="mission-color-{{mission.domainId}}"
          @imageName="mission-{{mission.id}}"
          @missionCompleted={{this.missionCompleted mission.id}}
        />
      </PixButton>
    {{/each}}

