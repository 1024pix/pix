#!/usr/bin/env node

const heapProfile = require('heap-profile');
const createServer = require('../server');
const logger = require('../lib/infrastructure/logger');

const start = async () => {
  try {
    heapProfile.start();

    const server = await createServer();
    await server.start();

    logger.info('Server running at %s', server.info.uri);
  }
  catch (err) {
    logger.error(err);
    process.exit(1);
  }
};

start();
