{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["*.json", "**/logo-3mb.js"]
  },
  "overrides": [
    {
      "include": ["scripts/*.js", "db/migrations/*.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsoleLog": "off"
          }
        }
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useFlatMap": "off",
        "noForEach": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noUselessConstructor": "off",
        "noUselessRename": "off",
        "noUselessSwitchCase": "off",
        "noUselessThisAlias": "off",
        "useArrowFunction": "off",
        "useLiteralKeys": "off",
        "useOptionalChain": "off",
        "useRegexLiterals": "off"
      },
      "nursery": {
        "noEmptyBlockStatements": "error"
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "noDelete": "off"
      },
      "style": {
        "noArguments": "off",
        "noCommaOperator": "off",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "off",
        "useDefaultParameterLast": "off",
        "useExponentiationOperator": "off",
        "useSingleVarDeclarator": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConsoleLog": "error",
        "noDoubleEquals": "off",
        "noGlobalIsNan": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
