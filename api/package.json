{
  "name": "pix-api",
  "version": "1.43.0",
  "description": "Plateforme d'évaluation et de certification des compétences numériques à l'usage de tous les citoyens francophones",
  "main": "server.js",
  "author": "SGMAP",
  "license": "AGPL-3.0",
  "engines": {
    "node": "^4.5 || 6.* || 7.* || >= 8.*"
  },
  "homepage": "https://github.com/sgmap/pix-api#readme",
  "dependencies": {
    "airtable": "^0.5.2",
    "bcrypt": "^1.0.3",
    "blipp": "^2.3.0",
    "bookshelf": "^0.12.1",
    "bookshelf-validate": "^2.0.3",
    "boom": "^5.2.0",
    "bunyan": "^1.8.12",
    "catbox": "^7.1.5",
    "catbox-memory": "^2.0.4",
    "dotenv": "^5.0.1",
    "faker": "^4.1.0",
    "fast-levenshtein": "^2.0.6",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    "hapi-swagger": "^7.8.1",
    "inert": "^4.2.1",
    "joi": "^11.1.1",
    "json2csv": "^3.11.5",
    "jsonapi-serializer": "^3.5.5",
    "jsonwebtoken": "^7.4.3",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "moment": "^2.21.0",
    "moment-timezone": "^0.5.14",
    "node-cache": "^4.1.1",
    "node-mailjet": "^3.2.1",
    "object-hash": "^1.2.0",
    "path": "^0.12.7",
    "pg": "^7.2.0",
    "prom-client": "^10.2.2",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "sqlite3": "^3.1.13",
    "vision": "^4.1.1",
    "xregexp": "^3.2.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.4",
    "nock": "^9.0.22",
    "nodemon": "^1.12.1",
    "sinon": "^4.4.3",
    "sinon-chai": "^3.0.0"
  },
  "scripts": {
    "help": "./scripts/help.sh",
    "clean": "rm -rf node_modules db/*.sqlite3",
    "start": "node bin/www",
    "start:watch": "./node_modules/.bin/nodemon bin/www",
    "db:create": "./node_modules/.bin/knex --knexfile db/knexfile.js migrate:make $migrationname",
    "db:migrate": "./node_modules/.bin/knex --knexfile db/knexfile.js migrate:latest",
    "db:seed": "./node_modules/.bin/knex --knexfile db/knexfile.js seed:run",
    "db:delete": "rm db/dev.sqlite3 ",
    "db:reset": "npm run db:delete && npm run db:migrate && npm run db:seed",
    "test": "npm run test:api && npm run test:script",
    "test:api": "NODE_ENV=test npm run db:migrate && NODE_ENV=test ./node_modules/.bin/mocha --recursive tests",
    "test:api:watch": "NODE_ENV=test ./node_modules/.bin/mocha --recursive tests --watch",
    "test:script": "NODE_ENV=test ./node_modules/.bin/mocha --recursive scripts",
    "test:watch": "npm test -- --watch",
    "lint": "./node_modules/.bin/eslint lib tests",
    "lint:fix": "npm run lint --fix",
    "coverage:check": "NODE_ENV=test npm run db:migrate && NODE_ENV=test ./node_modules/.bin/istanbul cover --dir '../coverage' _mocha -- --recursive tests",
    "coverage:rename": "mv ../coverage/lcov.info ../coverage/api_lcov.info",
    "coverage": "npm run coverage:check && npm run coverage:rename",
    "deploy:integration": "./scripts/deploy.sh integration",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production && (OS_REGION_NAME=$OS_REGION_NAME_PRODUCTION ./scripts/deploy_ansible.sh production|| true)"
  }
}
