    "vision": "^5.3.3",
    "xregexp": "^4.2.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.18.2",
    "eslint-plugin-mocha": "^5.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.4",
    "nock": "^9.2.3",
    "nodemon": "^1.17.2",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.0.0"
  },
  "scripts": {
    "help": "./scripts/help.sh",
    "clean": "rm -rf node_modules db/*.sqlite3",
    "start": "node bin/www",
    "start:watch": "npx nodemon bin/www",
    "dev": "npx nodemon bin/www",
    "db:create": "npx knex --knexfile db/knexfile.js migrate:make $migrationname",
    "db:migrate": "npx knex --knexfile db/knexfile.js migrate:latest",
    "db:seed": "npx knex --knexfile db/knexfile.js seed:run",
    "db:delete": "rm db/dev.sqlite3 ",
    "db:reset": "npm run db:delete && npm run db:migrate && npm run db:seed",
    "test": "npm run test:api",
    "test:api": "NODE_ENV=test npm run db:migrate && NODE_ENV=test npx mocha --recursive --exit --reporter dot tests",
    "test:api:debug": "NODE_ENV=test npx mocha --inspect-brk=9229 --recursive --exit --reporter dot tests",
    "test:api:watch": "NODE_ENV=test npx mocha --recursive tests --watch --reporter dot",
    "test:scripts": "NODE_ENV=test npx mocha --recursive --reporter dot ./tests/unit/scripts",
    "test:lint": "npm test && npm run lint",
    "lint": "npx eslint lib tests",
    "lint:fix": "npx eslint lib tests --fix",
    "coverage:check": "NODE_ENV=test npm run db:migrate && NODE_ENV=test npx istanbul cover --dir '../coverage' _mocha -- --recursive tests",
    "coverage:rename": "mv ../coverage/lcov.info ../coverage/api_lcov.info",
    "coverage": "npm run coverage:check && npm run coverage:rename",
    "deploy:integration": "./scripts/deploy.sh integration",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production"
  }
}
