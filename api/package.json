    "boom": "^7.2.0",
    "bunyan": "^1.8.12",
    "catbox": "^10.0.2",
    "catbox-memory": "^3.1.2",
    "dezalgo": "^1.0.3",
    "dotenv": "^6.0.0",
    "faker": "^4.1.0",
    "fast-levenshtein": "^2.0.6",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^17.5.1",
    "hapi-raven": "^7.0.0",
    "hapi-swagger": "^9.1.1",
    "inert": "^5.1.0",
    "joi": "^13.2.0",
    "json2csv": "^4.1.3",
    "jsonapi-serializer": "^3.5.6",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.14.3",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "moment-timezone": "^0.5.14",
