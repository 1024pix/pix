{
  "name": "pix-api",
  "version": "1.0.0",
  "description": "Middleware for the PIX platform project",
  "main": "server.js",
  "scripts": {
    "serve": "./node_modules/.bin/nodemon server.js",
    "test": "NODE_ENV=test npm run db:migrate && NODE_ENV=test ./node_modules/.bin/mocha -r tests/setup --recursive tests",
    "test:serve": "NODE_ENV=test ./node_modules/.bin/mocha -r tests/setup --recursive tests --watch",
    "knex": "./node_modules/.bin/knex --knexfile db/knexfile.js",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- -r tests/setup --recursive tests",
    "lint": "./node_modules/.bin/eslint app/**/*.js",
    "deploy:integration": "./scripts/deploy.sh integration",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sgmap/pix-api.git"
  },
  "author": "SGMAP",
  "license": "AGPL-1.0",
  "bugs": {
    "url": "https://github.com/sgmap/pix-api/issues"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "homepage": "https://github.com/sgmap/pix-api#readme",
  "dependencies": {
    "airtable": "0.4.2",
    "blipp": "2.3.0",
    "bookshelf": "0.10.2",
    "boom": "4.1.0",
    "good": "7.0.2",
    "good-console": "6.1.2",
    "good-squeeze": "5.0.0",
    "hapi": "15.1.1",
    "inject-then": "2.0.7",
    "knex": "0.12.3",
    "lodash": "4.16.4",
    "moment": "2.15.1",
    "path": "0.12.7",
    "pg": "6.1.0",
    "sinon": "^1.17.6",
    "sqlite3": "3.1.6"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "eslint": "^3.7.1",
    "istanbul": "^0.4.5",
    "mocha": "3.1.2",
    "nock": "8.0.0",
    "nodemon": "1.10.2",
    "sinon": "1.17.6",
    "sinon-as-promised": "^4.0.2"
  }
}
