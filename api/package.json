{
  "name": "pix-api",
  "version": "4.0.0",
  "description": "Plateforme d'évaluation et de certification des compétences numériques à l'usage de tous les citoyens francophones",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sgmap/pix.git"
  },
  "author": "SGMAP",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/sgmap/pix-api/issues"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "homepage": "https://github.com/sgmap/pix-api#readme",
  "dependencies": {
    "airtable": "^0.4.3",
    "blipp": "^2.3.0",
    "bookshelf": "^0.10.2",
    "boom": "^4.2.0",
    "bunyan": "^1.8.5",
    "catbox": "^7.1.2",
    "catbox-memory": "^2.0.4",
    "faker": "3.1.0",
    "good": "^7.0.2",
    "good-console": "^6.3.1",
    "good-squeeze": "^5.0.1",
    "hapi": "^15.2.0",
    "hapi-swagger": "^7.4.0",
    "inert": "^4.0.2",
    "inject-then": "^2.0.7",
    "knex": "^0.12.6",
    "lodash": "^4.17.2",
    "moment": "^2.17.0",
    "node-cache": "^4.1.0",
    "path": "^0.12.7",
    "pg": "^6.1.0",
    "sqlite3": "^3.1.8",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "^3.11.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nock": "^9.0.2",
    "nodemon": "^1.11.0",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2"
  },
  "scripts": {
    "help": "./scripts/help.sh",
    "clean": "rm -rf node_modules",
    "start": "node bin/www",
    "start:watch": "./node_modules/.bin/nodemon bin/www",
    "db:migrate": "./node_modules/.bin/knex --knexfile db/knexfile.js migrate:latest",
    "db:seed": "./node_modules/.bin/knex --knexfile db/knexfile.js seed:run",
    "test": "NODE_ENV=test npm run db:migrate && NODE_ENV=test ./node_modules/.bin/mocha -r tests/setup --recursive tests",
    "test:watch": "npm test -- --watch",
    "lint": "./node_modules/.bin/eslint lib/**",
    "coverage:check": "NODE_ENV=test npm run db:migrate && NODE_ENV=test ./node_modules/.bin/istanbul cover --dir '../coverage' _mocha -- -r tests/setup --recursive tests",
    "coverage:rename": "mv ../coverage/lcov.info ../coverage/api_lcov.info",
    "coverage": "npm run coverage:check && npm run coverage:rename",
    "deploy:integration": "./scripts/deploy.sh integration",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production"
  }
}
