    "node-mailjet": "^3.2.1",
    "object-hash": "^1.3.0",
    "papaparse": "^4.3.7",
    "path": "^0.12.7",
    "pg": "^7.4.1",
    "prom-client": "^11.0.0",
    "redis": "^2.8.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
