    "papaparse": "^5.0.2",
    "path": "^0.12.7",
    "pg": "^7.12.1",
    "prom-client": "^11.5.3",
    "randomstring": "^1.1.5",
    "redis": "^2.8.0",
    "redlock": "^3.1.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "samlify": "github:1024pix/samlify#no-xml-validation",
    "vision": "^5.4.4",
    "xml-crypto": "~1.0.2",
    "xmldom": "0.1.27",
