    "url": "git+https://github.com/1024pix/pix.git"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "main": "server.js",
  "homepage": "https://github.com/1024pix/pix#readme",
  "dependencies": {
    "@hapi/inert": "^5.2.1",
    "airtable": "^0.7.1",
    "bcrypt": "^3.0.6",
