    "bookshelf-validate": "^2.0.3",
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "catbox": "^10.0.6",
    "catbox-memory": "^4.0.1",
    "dezalgo": "^1.0.3",
    "dotenv": "^8.1.0",
    "faker": "^4.1.0",
    "fast-levenshtein": "^2.0.6",
    "good": "^8.1.2",
    "good-console": "^8.0.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^18.1.0",
    "hapi-sentry": "^2.0.3",
    "hapi-swagger": "^9.3.1",
    "heap-profile": "^0.3.2",
    "heapdump": "^0.3.14",
    "joi": "^14.3.1",
    "json2csv": "^4.5.2",
    "jsonapi-serializer": "^3.6.5",
    "jsonwebtoken": "^8.5.1",
    "jszip": "3.2.2",
    "knex": "^0.19.3",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
