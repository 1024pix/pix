<div class="table session-finalization-candidates-informations-step">
  <table class="session-finalization-candidates-informations-step__table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>N° de certification</th>
        <th>Signalement (facultatif)</th>
        <th>
          <div class="session-finalization-candidates-informations-step__row">
            <div class="session-finalization-candidates-informations-step__checker" {{on 'click' (fn @toggleAllCertificationCandidatesHasSeenEndTestScreen this.hasCheckedSomething)}}>
              {{#if this.hasCheckedEverything}}
                <div class="checkbox checkbox--checked">
                  <img
                    src="/icons/icon-done.svg"
                    class="session-finalization-candidates-informations-step__done-icon"
                    alt="checkbox" >
                </div>
              {{else if this.hasCheckedSomething}}
                <div class="checkbox checkbox--unchecked">
                  <div class="session-finalization-candidates-informations-step__dash-icon"></div>
                </div>
              {{else}}
                <div class="checkbox checkbox--unchecked">
                </div>
              {{/if}}
            </div>
            Écran de fin du test vu
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each @certificationCandidates as |candidate|}}
        <tr>
          <td data-test-id="finalization-candidate-last-name_{{candidate.id}}">{{candidate.lastName}}</td>
          <td data-test-id="finalization-candidate-first-name_{{candidate.id}}">{{candidate.firstName}}</td>
          <td data-test-id="finalization-candidate-certification-number_{{candidate.id}}">{{candidate.readableCertificationCourseId}}</td>
          <td>
            <textarea
              data-test-id="finalization-candidate-examiner-comment_{{candidate.id}}"
              class="session-finalization-candidates-informations-step__textarea"
              value={{candidate.examinerComment}}
              {{on 'input' (fn @updateCertificationCandidateExaminerComment candidate)}}
              maxlength={{@examinerCommentMaxLength}}
            />
          </td>
          <td>
            {{#if (not candidate.isMissing)}}
              {{#if candidate.hasSeenEndTestScreen}}
                <div
                  data-test-id="finalization-candidate-has-seen-end-test-screen_{{candidate.id}}"
                  class="checkbox checkbox--checked"
                  {{on 'click' (fn @toggleCertificationCandidateHasSeenEndTestScreen candidate)}}>
                  <img
                    src="/icons/icon-done.svg"
                    class="session-finalization-candidates-informations-step__done-icon"
                    alt="checkbox" >
                </div>
              {{else}}
                <div
                  data-test-id="finalization-candidate-has-seen-end-test-screen_{{candidate.id}}"
                  class="checkbox checkbox--unchecked"
                  {{on 'click' (fn @toggleCertificationCandidateHasSeenEndTestScreen candidate)}}/>
              {{/if}}
            {{else}}
              <div
                data-test-id="finalization-candidate-has-seen-end-test-screen_{{candidate.id}}"
                class="checkbox checkbox--unchecked checkbox--disabled"/>
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
