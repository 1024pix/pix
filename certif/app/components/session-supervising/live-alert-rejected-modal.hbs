<PixModal
  @class="pix-modal-dialog live-alert-rejected-modal"
  @title={{@title}}
  @onCloseButtonClick={{@closeConfirmationModal}}
  @showModal={{@showModal}}
>
  <:content>
    <p>
      <PixBanner @type="error" class="live-alert-rejected-modal__error-banner">
        {{t "pages.session-supervising.candidate-in-list.handle-live-alert-modal.rejected.banner"}}
      </PixBanner>
    </p>

    <div class="app-modal-body__warning live-alert-rejected-modal__description">
      <p>
        {{t "pages.session-supervising.candidate-in-list.handle-live-alert-modal.rejected.description"}}
      </p>
    </div>
  </:content>
  <:footer>
    <PixButton
      @triggerAction={{@closeConfirmationModal}}
      aria-label={{t "pages.session-supervising.candidate-in-list.handle-live-alert-modal.rejected.close-button-label"}}
    >
      {{t "pages.session-supervising.candidate-in-list.handle-live-alert-modal.rejected.close-button-text"}}
    </PixButton>
  </:footer>
</PixModal>