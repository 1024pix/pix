<h1 class="page__title page-title">Modification d'une session de certification</h1>

<form {{action updateSession session on='submit'}} class="session-form">

  <div class="session-form__field">
    <label for="session-address" class="label">Nom du site</label>
    {{input id='session-address'
            name='session-address'
            type='text'
            maxlength='255'
            value=session.address
            class="input"
    }}
    {{#each session.errors.address as |error|}}
      <div class='session-form__error error-message'>
        {{error.message}}
      </div>
    {{/each}}
  </div>

  <div class="session-form__field">
    <label for="session-room" class="label">Nom de la salle</label>
    {{input id='session-room'
            name='session-room'
            type='text'
            maxlength='255'
            value=session.room
            class="input"
    }}
    {{#each session.errors.room as |error|}}
      <div class='session-form__error error-message'>
        {{error.message}}
      </div>
    {{/each}}
  </div>

  <div class="session-form__field">
    <label for="session-date" class="label">Date (au format jj/mm/yyyy)</label>
    {{input id='session-date'
            name='session-date'
            type='text'
            maxlength='10'
            value=session.date
            class="input"
    }}
    {{#each session.errors.date as |error|}}
      <div class='session-form__error error-message'>
        {{error.message}}
      </div>
    {{/each}}
  </div>

  <div class="session-form__field">
    <label for="session-time" class="label">Heure (au format HH:MM)</label>
    {{input id='session-time'
            name='session-time'
            type='text'
            maxlength='5'
            value=session.time
            class="input"
    }}
    {{#each session.errors.time as |error|}}
      <div class='session-form__error error-message'>
        {{error.message}}
      </div>
    {{/each}}
  </div>

  <div class="session-form__field">
    <label for="session-examiner" class="label">Surveillant</label>
    {{input id='session-examiner'
            name='session-examiner'
            type='text'
            maxlength='255'
            value=session.examiner
            class="input"
    }}
    {{#each session.errors.examiner as |error|}}
      <div class='session-form__error error-message'>
        {{error.message}}
      </div>
    {{/each}}
  </div>

  <div class="session-form__field">
    <label for="session-description" class="label">Description (optionnel)</label>
    {{textarea id='session-description'
               name='session-description'
               maxlength='350'
               rows=8
               value=session.description
               class="textarea"
    }}
  </div>

  <div class="session-form__validation">
    <div class="button button--no-color" {{action cancel}}>Annuler</div>
    <button class="button" type="submit">Mettre Ã  jour</button>
  </div>

</form>
