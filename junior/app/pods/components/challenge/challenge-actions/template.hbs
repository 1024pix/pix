<div class="challenge-actions">
  {{#unless (or this.hideSkipButton @isLesson)}}
    <PixButton class="pix1d-button pix1d-button--skip" @triggerAction={{@skipChallenge}} @shape="rounded" @size="big">
      <span>
        {{t "pages.challenge.actions.skip"}}
      </span>
    </PixButton>
  {{/unless}}
  {{#if @answerHasBeenValidated}}
    <PixButton
      class="pix1d-button pix1d-button--success"
      @iconAfter="arrow-right"
      @triggerAction={{@nextAction}}
      @shape="rounded"
      @size="big"
    >
      <span>
        {{t "pages.challenge.actions.continue"}}
      </span>
    </PixButton>
  {{else if @isLesson}}
    <PixButton
      class="pix1d-button"
      @iconAfter="arrow-right"
      @isDisabled={{@disableLessonButton}}
      @triggerAction={{@skipChallenge}}
      @shape="rounded"
      @size="big"
    >
      <span>
        {{t "pages.challenge.actions.continue"}}
      </span>
    </PixButton>
  {{else}}
    <PixButton
      class="pix1d-button"
      @isDisabled={{@disableCheckButton}}
      @triggerAction={{@validateAnswer}}
      @shape="rounded"
      @size="big"
    >
      <span>
        {{t "pages.challenge.actions.check"}}
      </span>
    </PixButton>
  {{/if}}

</div>