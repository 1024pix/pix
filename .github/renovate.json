{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    "local>1024pix/pix-renovate-test//.github/node-circleci-detection",
    "local>1024pix/pix-renovate-test//.github/extend-renovate"
  ],
  "enabled": true,
  "includeForks": true,
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "minimumReleaseAge": "7 days",
  "commitMessagePrefix": "[BUMP]",
  "rebaseWhen": "never",
  "schedule": "every 1 hour every weekday",
  "packageRules": [{
    "matchPackagePatterns": "^ember-data$",
    "groupName": "ember-data"
  }]
}
