<div id="challenge-preview" data-id="{{ challenge.id }}" class="challenge-preview">
    <div class="container">

        <div class="title">
            Prévisualisation de l'épreuve #{{ challenge.id }}
        </div>

        <p>Consigne :</p>
        <div class="rounded-panel challenge-instruction">
            <p>{{ challenge.instruction }}</p>
        </div>

        <p>Réponse :</p>
        <div class="rounded-panel challenge-proposals">
          {{#each challenge.proposalsAsArray as |proposal|}}
              <p>
                  <label>{{input type="radio" name="proposals"}} {{ proposal }}</label>
              </p>
          {{/each}}
        </div>

      {{#if hasNextChallenge}}
        {{#link-to "courses.challenge-preview" course.id nextChallenge.id class="btn btn-primary next-challenge-button"}}Épreuve suivante{{/link-to}}
      {{/if}}
    </div>
</div>
