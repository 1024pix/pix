<div id="home">
    <div class="container">

        <div class="title">
            Liste des tests
        </div>

        <ul class="row tests">

          {{#each model as |course|}}
            <li class="test-container rounded-panel test-wrapper">
                <img class="test-picture" src="{{ course.imgUrl }}" alt="Illustration du test">

                <h3 class="test-name">{{ course.name }}</h3>

                <p class="test-description">
                    {{ course.description }}
                </p>

                <div class="test-actions">
                  {{#link-to "assessment-create" course.id class="btn btn-primary btn-small"}}
                      DÃ©marrer le Test
                  {{/link-to}}
                </div>
            </li>
          {{/each}}

            <!-- test-5 -->
