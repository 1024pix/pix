<div class="rounded-panel challenge-statement">
    <p class="challenge-instruction">{{ challenge.instruction }}</p>
  {{#if hasIllustration}}
      <hr>
      <img class="challenge-illustration" src="{{ challenge.illustrationUrl }}" alt="ceci est une image">
  {{/if}}
</div>

<div class="rounded-panel challenge-response">
    <div class="challenge-proposals">
      {{#each challenge.proposalsAsArray as |proposal index|}}
          <p class="challenge-proposal">
              <label>{{radio-button name="proposals" value=index checked=selectedProposal}} {{ proposal }}</label>
          </p>
      {{/each}}
    </div>

  {{#unless isChallengePreviewMode}}
      <hr/>
    {{#if hasError}}
        <div class="alert alert-danger" role="alert">
          {{error}}
        </div>
    {{/if}}

      <div class="actions pull-right">
          <button class="button button-secondary skip-button">Passer</button>
          <button class="button button-primary validate-button" {{action "validate" challenge assessment}}>Valider
          </button>
      </div>
  {{/unless}}
</div>
