<div class="certification-center-list content-text content-text--small">
  <table class="table-admin">
    <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
      <th>Type</th>
      <th>ID externe</th>
    </tr>
    <tr>
      <th><Input @class="table-admin-input" @id="id" @value={{idValue}} {{on "keyup" (fn @triggerFiltering "id" idValue)}} /></th>
      <th><Input @class="table-admin-input" @id="name" @value={{nameValue}} {{on "keyup" (fn @triggerFiltering "name" nameValue)}} /></th>
      <th><Input @class="table-admin-input" @id="type" @value={{typeValue}} {{on "keyup" (fn @triggerFiltering "type" typeValue)}} /></th>
      <th><Input @class="table-admin-input" @id="externalId" @value={{externalIdValue}} {{on "keyup" (fn @triggerFiltering "externalId" externalIdValue)}} /></th>
    </tr>
    </thead>

    {{#if @certificationCenters}}
      <tbody>
      {{#each @certificationCenters as |certificationCenter|}}
        <tr>
          <td>{{certificationCenter.id}}</td>
          <td>{{certificationCenter.name}}</td>
          <td>{{certificationCenter.type}}</td>
          <td>{{certificationCenter.externalId}}</td>
        </tr>
      {{/each}}
      </tbody>
    {{/if}}
  </table>

  {{#unless @certificationCenters}}
    <div class="table__empty content-text">Aucun r√©sultat</div>
  {{/unless}}
</div>

{{#if @certificationCenters}}
  <PaginationControl @pagination={{@certificationCenters.meta}} />
{{/if}}
