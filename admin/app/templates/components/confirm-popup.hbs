<BsModalSimple
  @title="Merci de confirmer"
  @closeTitle="Annuler"
  @submitTitle="Confirmer"
  @size={{null}}
  @fade={{false}}
  @open={{@show}}
  @position="center"
  @onSubmit={{@confirm}}
  @onHide={{@cancel}}
>
  <p>{{@message}}</p>
  <p class="confirm-popup__errors">{{@error}}</p>
</BsModalSimple>
