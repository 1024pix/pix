{{page-title "Organisations"}}
<header class="page-header">
  <div class="page-title">Toutes les organisations</div>
  <div class="page-actions">
    <LinkTo
      @route="authenticated.organizations.new"
      class="btn btn-outline-default btn-thin"
    >
      <FaIcon @icon="plus" />&nbsp;Nouvelle organisation
    </LinkTo>
  </div>
</header>

<main class="page-body">
  <section class="page-section">
    <Organizations::ListItems
      @organizations={{@model}}
      @id={{this.id}}
      @name={{this.name}}
      @type={{this.type}}
      @externalId={{this.externalId}}
      @triggerFiltering={{this.triggerFiltering}}
    />
  </section>
</main>