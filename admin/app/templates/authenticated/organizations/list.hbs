<header class="page-header">
  <div class="page-title">Toutes les organisations</div>
  <div class="page-actions">
    <LinkTo @route="authenticated.organizations.new" class="btn btn-outline-default btn-thin">
      <FaIcon @icon="plus"></FaIcon>&nbsp;Nouvelle organisation
    </LinkTo>
  </div>
</header>

<main class="page-body">
  <section class="page-section">
    <Organizations::ListItems
      @organizations={{@model}}
      @name={{this.name}}
      @type={{this.type}}
      @externalId={{this.externalId}}
      @triggerFiltering={{this.triggerFiltering}}
      @goToOrganizationPage={{this.goToOrganizationPage}} />
  </section>
</main>
