<div class="content-text content-text--small">
  <table class="table-admin">
    <thead>
      <tr>
        <th>ID</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Adresse électronique</th>
      </tr>
    </thead>

    {{#if @users}}
      <tbody>
        {{#each @users as |user|}}
          <tr>
            <td><LinkTo @route="authenticated.users.get" @model={{user.id}}> {{user.id}} </LinkTo></td>
            <td>{{user.firstName}}</td>
            <td>{{user.lastName}}</td>
            <td>{{user.email}}</td>
          </tr>
        {{/each}}
      </tbody>
    {{/if}}
  </table>

  {{#unless @users}}
    <div class="table__empty content-text">Aucun résultat</div>
  {{/unless}}
</div>

{{#if @users}}
  <PaginationControl @pagination={{@users.meta}} />
{{/if}}