<PixModal
  @title="Déplacer la méthode de connexion"
  @onCloseButtonClick={{@toggleReassignPoleEmploiAuthenticationMethodModal}}
>
  <:content>
    <p class="reassign-authentication-method-modal__form-body__information">
      Vous vous apprêtez à déplacer la méthode Pôle Emploi sur un autre utilisateur. Cela signifie qu'elle n'existera
      plus pour cet utilisateur.
    </p>
    <PixInput
      @id="user-id-for-reassign-authentication-method"
      @label="Id de l'utilisateur à qui vous souhaitez ajouter la méthode de connexion"
      {{on "change" @onChangeTargetUserId}}
      type="number"
      required
    />
  </:content>

  <:footer>
    <PixButton
      @size="small"
      @backgroundColor="transparent-light"
      @isBorderVisible={{true}}
      @triggerAction={{@toggleReassignPoleEmploiAuthenticationMethodModal}}
    >Annuler</PixButton>
    <PixButton @type="submit" @size="small" {{on "click" @submitReassignPoleEmploiAuthenticationMethod}}>
      Valider le déplacement
    </PixButton>
  </:footer>
</PixModal>