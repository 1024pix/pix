<section class="page-section mb_10">

  {{#if this.allTags}}
    <ul class="organization-all-tags-list">
      {{#each this.allTags as |tag|}}
        <li class="organization-all-tags-list__tag">

          {{#if tag.isTagAssignedToOrganization}}
            <button type="button" onClick={{fn this.removeTagToOrganization tag}}>
              <PixTag @compact="true" @color="purple-light">
                {{tag.name}}
              </PixTag>
            </button>
          {{else}}
            <button type="button" onClick={{fn this.addTagToOrganization tag}}>
              <PixTag @compact="true" @color="grey-light">
                {{tag.name}}
              </PixTag>
            </button>
          {{/if}}

        </li>
      {{/each}}
    </ul>
  {{/if}}

</section>