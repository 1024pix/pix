<form class="login-form" {{on "submit" this.authenticateUser}}>
  <!-- Error message -->
  {{#if this.errorMessage}}
    <div class="login-form__control">
      <p class="login-form__error">{{this.errorMessage}}</p>
    </div>
  {{/if}}

  <!-- Field "identification" -->
  <div class="login-form__control">
    <Input id="identification"
           @class="login-form__field login-form__field--identification"
           @placeholder="Enter Login"
           @required="true"
           @value={{this.email}}
           @autocomplete={{true}} />
  </div>

  <!-- Field "password" -->
  <div class="login-form__control">
    <Input id="password"
           @class="login-form__field login-form__field--password"
           @placeholder="Enter Password"
           @required="true"
           @type="password"
           @value={{this.password}}
           @autocomplete={{true}} />
  </div>

  <!-- Form submit button -->
  <div class="login-form__control">
    <button class="btn btn-primary login-form__button" type="submit">Connexion</button>
  </div>
</form>
