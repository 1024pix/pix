<form class="login-form" {{on "submit" this.authenticateUser}}>

  {{#if this.errorMessage}}
    <div class="login-form__control">
      <p class="login-form__error">{{this.errorMessage}}</p>
    </div>
  {{/if}}

  <div class="login-form__control">
    <Input
      id="identification"
      data-test-id="login-form-field-identification"
      class="login-form__field"
      placeholder="Enter Login"
      required="true"
      @value={{this.email}}
      autocomplete="true"
    />
  </div>

  <div class="login-form__control">
    <Input
      id="password"
      data-test-id="login-form-field-password"
      class="login-form__field"
      placeholder="Enter Password"
      required="true"
      @type="password"
      @value={{this.password}}
      autocomplete="true"
    />
  </div>

  <div class="login-form__control">
    <PixButton @type="submit" @size="small" class="login-form__button">Connexion</PixButton>
  </div>
</form>