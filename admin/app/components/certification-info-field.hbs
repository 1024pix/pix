{{#if @edition}}
  <div class="row form-group certification-info-field edited">
    <label class="col-form-label" for={{@id}}>{{@label}}</label>
    <div>
      {{#if @isDate}}
        <EmberFlatpickr
          @id={{@fieldId}}
          @altFormat="d/m/Y"
          @altInput={{true}}
          @onChange={{@onUpdateCertificationBirthdate}}
          @dateFormat="Y-m-d"
          @locale="fr"
          @date={{@value}}
          @name={{@fieldId}}
          @class="form-control" />
      {{else}}
        <Input id={{@fieldId}} @type="text" @value={{@value}} class="form-control" />
        {{#if @suffix}}
          <span class="certification-info-suffix">{{@suffix}}</span>
        {{/if}}
      {{/if}}
    </div>
  </div>
{{else}}
  <div class="row certification-info-field">
    <div class="certification-info-label">{{@label}}</div>
    <div class="certification-info-value">
      {{#if @linkRoute}}
        <LinkTo @route={{@linkRoute}} @model={{@value}}>
          {{this.valueWithSuffix}}
        </LinkTo>
      {{else}}
        {{#if @isDate}}
          {{moment-format @value 'DD/MM/YYYY' allow-empty=true}}
        {{else}}
          {{this.valueWithSuffix}}
        {{/if}}
      {{/if}}
    </div>
  </div>
{{/if}}
