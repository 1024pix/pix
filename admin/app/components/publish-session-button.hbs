  @triggerAction={{this.displayPublishConfirmationModal}}
  @border="squircle-small"
  class="publish-session-button"
  aria-label="Publier cette session">
  <FaIcon @icon="paper-plane" />Publier
</PixButton>


<ConfirmPopup @message='Souhaitez-vous publier la session ?'
