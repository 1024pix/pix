<section class="page-section mb_10">
  <header class="page-section__header">
    <h2 class="page-section__title">Listes des campagnes</h2>
  </header>
  <div class="target-profiles-list content-text content-text--small">
    <div class="table-admin">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Type</th>
            <th>Nom</th>
            <th>Créée le</th>
            <th>Créée par</th>
            <th>Archivée le</th>
          </tr>
        </thead>

        {{#if @campaigns}}
          <tbody>
          {{#each @campaigns as |campaign|}}
            <tr aria-label="campagne">
              <td>{{campaign.id}}</td>
              <td>{{campaign.code}}</td>
              <td>{{campaign.type}}</td>
              <td>{{campaign.name}}</td>
              <td>{{moment-format campaign.createdAt 'DD-MM-YYYY'}}</td>
              <td>{{campaign.creatorFirstName}} {{campaign.creatorLastName}}</td>
              {{#if campaign.archivedAt }}
                <td>{{moment-format campaign.archivedAt 'DD-MM-YYYY'}}</td>
              {{else}}
                <td>-</td>
              {{/if}}
            </tr>
          {{/each}}
          </tbody>
        {{/if}}
      </table>

      {{#unless @campaigns}}
        <div class="table__empty content-text">Aucune campagne</div>
      {{/unless}}
    </div>
    {{#if @campaigns}}
      <PaginationControl @pagination={{@campaigns.meta}}/>
    {{/if}}
  </div>
</section>
