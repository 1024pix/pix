<div class="entry-field certification-status-select">
  <label class="certification-info-label" for={{this.id}}>Statut :</label>
  <PowerSelect
      @options={{this.statusOptions}}
      @selected={{this.selectedOption}}
      @searchEnabled={{false}}
      @onChange={{this.selectOption}}
      as |option|>
    {{option.label}}
  </PowerSelect>
</div>
