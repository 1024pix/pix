<h1 class="page__title page-title">Ajouter un membre</h1>

<form {{action addTeamMember membership on='submit'}} class="form">

  <div class="form__field">
    <label for="email" class="label">Email</label>
    {{input id='email'
            name='email'
            type='email'
            value=email
            class="input"
    }}
  </div>

  <div class="form__validation">
    <div class="button button--no-color" {{action cancel}}>Annuler</div>
    <button class="button button--regular" type="submit">Ajouter</button>
  </div>

</form>
