<div class="participant-results__header">
  <div class="participant-results-header__title">
    {{#link-to "authenticated.campaigns.details.participants" campaignParticipation.campaign.id class="icon-button campaign-details-content__return-button"}}
      {{fa-icon 'arrow-left'}}
    {{/link-to}}
    <div class="page__title page-title">{{campaignParticipation.user.firstName}} {{campaignParticipation.user.lastName}}</div>
  </div>
</div>

<div class="panel panel--light-shadow participant-results__information">
  <div class="participant-results-row">
    <div class="participant-results-content participant-results-content--first-part">
      <div class="label-text participant-results-content__label-text">Identifiant</div>
      <div class="content-text participant-results-content__content-text">{{campaignParticipation.participantExternalId}}</div>
    </div>
    <div class="participant-results-content">
      <div class="label-text participant-results-content__label-text">Avancement</div>
    <div class="content-text participant-results-content__content-text">
      {{#if campaignParticipation.campaignParticipationResult.isCompleted}}
        100%
        <div class="participant-results-content__progress-bar--completed"></div>
      {{else}}
        {{campaignParticipation.campaignParticipationResult.percentageProgression}}%
        <div class="participant-results-content__progress-bar">
          <div class="participant-results-content__progress-bar--completion" style="width:{{campaignParticipation.campaignParticipationResult.percentageProgression}}px"></div>
        </div>
      {{/if}}
      </div>
    </div>
    <div class="participant-results-content">
      <div class="label-text participant-results-content__label-text">Commencé le</div>
      <div class="content-text participant-results-content__content-text">
        {{moment-format campaignParticipation.createdAt 'll' allow-empty=true}}
      </div>
    </div>
    <div class="participant-results-content">
      <div class="label-text participant-results-content__label-text">Partagé le</div>
      <div class="content-text participant-results-content__content-text">
        {{#if campaignParticipation.isShared}}
          {{fa-icon 'check-circle' class="participant-results-content__check-shared participant-results-content__check-shared--green"}}
          {{moment-format campaignParticipation.sharedAt 'll'}}
        {{else}}
          Non disponible
        {{/if}}

      </div>
    </div>
    <div class="participant-results-content">
      <div class="label-text participant-results-content__label-text">Score (Acquis)</div>
      <div class="content-text participant-results-content__content-text">
        {{#if campaignParticipation.isShared}}
          {{campaignParticipation.campaignParticipationResult.validatedSkillsCount}} / {{campaignParticipation.campaignParticipationResult.totalSkillsCount}}
        {{else}}
          Non disponible
        {{/if}}
      </div>
    </div>

  </div>
</div>
