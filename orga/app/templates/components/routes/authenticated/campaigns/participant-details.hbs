<div class="participant-details__header">
  <div class="participant-details-header__title">
    {{#link-to "authenticated.campaigns.details.participants" campaignId class="icon-button campaign-details-content__return-button"}}
      {{fa-icon 'arrow-left'}}
    {{/link-to}}
    <div class="page__title page-title">{{campaignParticipation.user.firstName}} {{campaignParticipation.user.lastName}}</div>
  </div>
</div>

<div class="panel panel--light-shadow participant-details__information">
  <div class="participant-details-row">
    <div class="participant-details-content participant-details-content--first-part">
      <div class="label-text participant-details-content__label-text">Identifiant</div>
      <div class="content-text participant-details-content__content-text">{{campaignParticipation.participantExternalId}}</div>
    </div>
    <div class="participant-details-content">
      <div class="label-text participant-details-content__label-text">Avancement</div>
    <div class="content-text participant-details-content__content-text">
      {{#if campaignParticipation.campaignParticipationResult.isCompleted}}
        100%
        <div class="participant-details-content__progress-bar--completed"></div>
      {{else}}
        <div class="participant-details-content__progress-bar">
          {{campaignParticipation.campaignParticipationResult.percentageProgression}}%
          <div class="participant-details-content__progress-bar--completion" style="width:{{campaignParticipation.campaignParticipationResult.percentageProgression}}px"></div>
        </div>
      {{/if}}
      </div>
    </div>
    <div class="participant-details-content">
      <div class="label-text participant-details-content__label-text">Commencé le</div>
      <div class="content-text participant-details-content__content-text">{{format-date campaignParticipation.createdAt}}</div>
    </div>
    <div class="participant-details-content">
      <div class="label-text participant-details-content__label-text">Partagé le</div>
      <div class="content-text participant-details-content__content-text">
        {{#if campaignParticipation.isShared}}
          {{fa-icon 'check-circle' class="participant-details-content__check-shared participant-details-content__check-shared--green"}}
          {{format-date campaignParticipation.sharedAt}}
        {{else}}
          Non disponible
        {{/if}}

      </div>
    </div>
    <div class="participant-details-content">
      <div class="label-text participant-details-content__label-text">Durée <totale></totale></div>
      <div class="content-text participant-details-content__content-text">
        {{#if campaignParticipation.isShared}}
          {{day-between-two-date campaignParticipation.createdAt campaignParticipation.sharedAt}} jours
        {{else}}
          Non disponible
        {{/if}}
      </div>
    </div>

  </div>
</div>