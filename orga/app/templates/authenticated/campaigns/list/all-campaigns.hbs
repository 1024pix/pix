{{page-title (t "pages.campaigns-list.tabs.all-campaigns")}}

{{#if @model.meta.hasCampaigns}}
  <Campaign::List
    @campaigns={{@model}}
    @nameFilter={{this.name}}
    @ownerNameFilter={{this.ownerName}}
    @statusFilter={{this.status}}
    @onFilter={{this.triggerFiltering}}
    @onClear={{this.clearFilters}}
    @onClickCampaign={{this.goToCampaignPage}}
    @allCampaignsContext={{true}}
  />
{{else}}
  <Campaign::NoCampaignPanel />
{{/if}}