{{page-title this.pageTitle}}

<article class="list-campaigns-page">
  {{#if @model.meta.hasCampaigns}}
    <Campaign::ListActions
      @title={{this.pageTitle}}
      @isArchived={{this.isArchived}}
      @onClickStatusFilter={{this.updateCampaignStatus}}
    />
    <Campaign::List
      @campaigns={{@model}}
      @nameFilter={{this.name}}
      @creatorNameFilter={{this.creatorName}}
      @onFilter={{this.triggerFiltering}}
      @onClickCampaign={{this.goToCampaignPage}}
    />
  {{else}}
    <Campaign::NoCampaignPanel />
  {{/if}}
</article>
