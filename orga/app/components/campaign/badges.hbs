{{#each @badges as |badge|}}
  <PixTooltip
    @id="badge-tooltip-{{badge.id}}"
    @text={{badge.title}}
    @position='bottom'
    @isInline={{true}}
  >
    <img
      src={{badge.imageUrl}}
      alt={{badge.altMessage}}
      tabindex="0"
      aria-describedby="badge-tooltip-{{badge.id}}"
    />
  </PixTooltip>
{{/each}}
