<Ui::ChartCard @title={{t "charts.participants-by-status.title"}} ...attributes>
  {{#if @loading}}
    <Campaign::Charts::ParticipantsByStatusLoader />
  {{else}}
    <Ui::Chart
      @type="doughnut"
      @options={{this.options}}
      @data={{this.data}}
      aria-hidden="true"
      class="participants-by-status"
    />

    <ul class="participants-by-status__legend" aria-hidden="true">
      {{#each this.datasets as |dataset|}}
        <li>
          <Campaign::Charts::ParticipantsByStatusLegend @dataset={{dataset}} />
        </li>
      {{/each}}
    </ul>

    <h2 class="screen-reader-only">{{t "charts.participants-by-status.a11y-title"}}</h2>
    <ul class="screen-reader-only">
      {{#each this.datasets as |dataset|}}
        <li>{{dataset.a11y}}</li>
      {{/each}}
    </ul>
  {{/if}}
</Ui::ChartCard>