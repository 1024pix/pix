{{#if this.isLoading}}
  <PixMultiSelect
    @id="division"
    @title={{t "pages.campaign-results.filters.type.divisions.title"}}
    @emptyMessage={{this.emptyMessage}}
    @placeholder={{this.placeholder}}
    @isSearchable={{true}}
    @showOptionsOnInput={{true}}
    @options={{this.divisions}}
    @selected={{@selected}}
    @onSelect={{@onSelect}}
    as |option|
  >
    {{option.label}}
  </PixMultiSelect>
{{else}}
  <PixMultiSelect
    @id="division"
    @title={{t "pages.campaign-results.filters.type.divisions.title"}}
    @emptyMessage={{this.emptyMessage}}
    @placeholder={{this.placeholder}}
    @isSearchable={{true}}
    @showOptionsOnInput={{true}}
    @options={{this.divisions}}
    @selected={{@selected}}
    @onSelect={{@onSelect}}
    as |option|
  >
    {{option.label}}
  </PixMultiSelect>
{{/if}}