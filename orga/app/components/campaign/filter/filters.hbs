<div class="campaign-filters">
  <section>
    <label class="campaign-filters__title">{{t "pages.campaigns-list.filter.title"}}</label>
    <Campaign::Filter::SearchInputFilter
      @field="name"
      @value={{@nameFilter}}
      @placeholder={{t "pages.campaigns-list.filter.by-name"}}
      @ariaLabel={{t "pages.campaigns-list.filter.by-name"}}
      @triggerFiltering={{@onFilter}}
    />
    <Campaign::Filter::SearchInputFilter
      @field="creatorName"
      @value={{@creatorNameFilter}}
      @placeholder={{t "pages.campaigns-list.filter.by-creator"}}
      @ariaLabel={{t "pages.campaigns-list.filter.by-creator"}}
      @triggerFiltering={{@onFilter}}
    />
    <div role="radiogroup" class="campaign-filters__type">
      <input
        type="radio"
        class="campaign-filters__radio"
        checked={{not @isArchived}}
        aria-label={{t "pages.campaigns-list.action.ongoing.aria-label"}}
        {{on "click" (fn @onClickStatusFilter null)}}
      />
      <label class="campaign-filters__tab {{unless @isArchived "campaign-filters__tab--active"}}">
        {{t "pages.campaigns-list.action.ongoing.label"}}
      </label>
      <input
        type="radio"
        class="campaign-filters__radio"
        checked={{@isArchived}}
        aria-label={{t "pages.campaigns-list.action.archived.aria-label"}}
        {{on "click" (fn @onClickStatusFilter "archived")}}
      />
      <label class="campaign-filters__tab {{if @isArchived "campaign-filters__tab--active"}}">
        {{t "pages.campaigns-list.action.archived.label"}}
      </label>
    </div>
  </section>
  <section>
    <p class="campaign-filters__results">
      {{t "pages.campaigns-list.filter.results" total=@numResults}}
    </p>
  </section>
</div>