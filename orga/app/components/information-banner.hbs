    <TranslateExtended
      @key='banners.import.message'
      @options={{hash
        faIcon=(component 'fa-icon' icon='external-link-alt')
        linkTo=(component 'link-to' (t 'banners.import.link-to') 'authenticated.sco-students' class="link link--banner link--bold link--underlined")
