<PixModal @title={{this.text.title}} @showModal={{@showModal}} @onCloseButtonClick={{@onCloseModal}}>
  <:content>
    {{this.text.content}}
    {{#if this.isMultipleDeletion}}
      <PixCheckbox
        {{on "click" this.giveDeletionPermission}}
        @labelSize="small"
        @checked={{this.allowDeletion}}
        @class="deletion-modal__permission-checkbox"
      >
        <strong>
          {{t "pages.organization-participants.deletion-modal.confirmation-checkbox" count=@itemsToDelete.length}}
        </strong>
      </PixCheckbox>
    {{/if}}
  </:content>
  <:footer>
    <PixButton @backgroundColor="transparent-light" @isBorderVisible={{true}} @triggerAction={{@onCloseModal}}>
      {{t "common.actions.cancel"}}
    </PixButton>
    <PixButton @backgroundColor="red" @triggerAction={{@onTriggerAction}} @isDisabled={{(not this.canDelete)}}>
      {{t "pages.organization-participants.deletion-modal.delete-button"}}
    </PixButton>
  </:footer>
</PixModal>