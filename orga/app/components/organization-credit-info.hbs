{{#if this.canShowCredit}}
  <div class="organization-credit-info">
    <span class="organization-credit-info__label">{{this.credit}}</span>
    <PixTooltip
      @text={{this.tooltipContent}}
      @position='bottom-left'
      @isWide={{true}}
      @isLight={{true}}>
        <FaIcon @icon="info-circle" class="info-icon"/>
    </PixTooltip>
  </div>
{{/if}}
