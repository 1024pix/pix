<Table::Header @size={{@size}} @align={{@align}} aria-sort={{@order}} ...attributes>
  <span class={{this.classname}}>
    {{yield}}
    {{#unless @isDisabled}}
      <PixIconButton
        @iconName={{this.icon}}
        @triggerAction={{this.toggleSort}}
        @withBackground={{false}}
        @size="small"
        @color="dark-grey"
        aria-label={{this.ariaLabel}}
      />
    {{/unless}}
  </span>
</Table::Header>