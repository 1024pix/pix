<Table::Header ...attributes>
  <PixSelect
    id="select-{{@field}}"
    class="table__input"
    aria-label={{@ariaLabel}}
    @onChange={{fn @triggerFiltering @field false}}
    @options={{@options}}
    @selectedOption={{@selectedOption}}
    @emptyOptionLabel={{@emptyOptionLabel}}
  />
</Table::Header>
