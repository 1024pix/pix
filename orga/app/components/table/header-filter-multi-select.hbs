<Table::Header ...attributes>
  <PixMultiSelect
    id="select-{{@field}}"
    class="table__input"
    @title={{@title}}
    @placeholder={{@placeholder}}
    aria-label={{@ariaLabel}}
    @showOptionsOnInput={{true}}
    @isSearchable={{true}}
    @onSelect={{fn @onSelect @field false}}
    @selected={{@selectedOption}}
    @options={{@options}}
    @onLoadOptions={{@onLoadOptions}}
    as |option|
  >
    {{option.label}}
  </PixMultiSelect>
</Table::Header>