<PixMultiSelect
  @id="division"
  @label={{t "common.filters.divisions.title"}}
  @innerText={{@placeholder}}
  @screenReaderOnly={{true}}
  @emptyMessage={{t "common.filters.divisions.empty"}}
  @loadingMessage={{t "common.filters.loading"}}
  @selected={{@selected}}
  @onSelect={{@onSelect}}
  @onLoadOptions={{this.onLoadDivisions}}
  @isSearchable={{true}}
  ...attributes
  as |option|
>
  {{option.label}}
</PixMultiSelect>