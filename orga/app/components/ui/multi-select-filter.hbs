<PixMultiSelect
  @id="multi-select-{{@field}}"
  @label={{@title}}
  @innerText={{@placeholder}}
  @screenReaderOnly={{true}}
  @loadingMessage={{t "common.filters.loading"}}
  @emptyMessage={{@emptyMessage}}
  @isSearchable={{true}}
  @onSelect={{this.onSelect}}
  @selected={{@selectedOption}}
  @options={{@options}}
  @onLoadOptions={{@onLoadOptions}}
  as |option|
>
  {{option.label}}
</PixMultiSelect>