<section class="indicator-card" ...attributes>
  {{#if @isLoading}}
    <p class="sr-only">{{@loader}}</p>
    <div class="indicator-card__icon" aria-hidden="true"></div>
    <div class="indicator-card__content" aria-hidden="true"></div>
  {{else}}
    <div class="indicator-card__icon {{if @color (concat "indicator-card__icon--" @color)}}" aria-hidden="true">
      <FaIcon @icon={{@icon}} />
    </div>
    <dl class="indicator-card__content">
      <div class="indicator-card__title">
        <dt>{{@title}}</dt>
        {{#if @info}}
          <PixTooltip
            @id={{@title}}
            @text={{@info}}
            @position="top"
            @isWide={{true}}
            class="indicator-card__tooltip hide-on-mobile"
          >
            <FaIcon
              @icon="question-circle"
              class="indicator-card__tooltip-icon"
              tabindex="0"
              aria-describedby={{@title}}
            />
          </PixTooltip>
        {{/if}}
      </div>
      <dd class="indicator-card__value">
        {{yield}}
      </dd>
    </dl>
  {{/if}}
</section>